{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "target": "es2016",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017.object",
      "scripthost"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "outDir": "../build"
  },
  "include": [
    "../src/**/*"
  ]
}
